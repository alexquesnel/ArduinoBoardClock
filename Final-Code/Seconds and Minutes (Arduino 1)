int led = 0;     //declares 14 LEDs
int led2 = 1;
int led3 = 2;
int led4 = 3;
int led5 = 4;
int led6 = 5;
int led7 = 6;
int led8 = 7;
int led9 = 8;
int led10 = 9;
int led11 = 10;
int led12 = 11;
int led13 = 12;
int led14 = 13;
int T = 1000;                  //declares T as 1000 (interval for the light change)


int blinkseconds (){
 
   digitalWrite(led4, LOW);   //Code for the seconds (ones digit 1, 2, 3, 4, 5) in the binary clock
   digitalWrite(led, LOW);
   delay(T);
   
   digitalWrite(led, HIGH);
   delay(T);
   digitalWrite(led, LOW);  
   digitalWrite(led2, HIGH); 
   delay(T);
   digitalWrite(led, HIGH);
   delay(T);
   digitalWrite(led, LOW);
   digitalWrite(led2, LOW);
   digitalWrite(led3, HIGH); 
   delay(T);
   digitalWrite(led, HIGH);
   delay(T);
   digitalWrite(led, LOW);
   digitalWrite(led2, HIGH);
   delay(T);
   digitalWrite(led, HIGH);

   delay(T);
   digitalWrite(led3, LOW);
   digitalWrite(led, LOW);
   digitalWrite(led2, LOW);
   digitalWrite(led4, HIGH); 
   delay(T);
   digitalWrite(led, HIGH);
   delay(T);

};
int blinktens(){
int k ;                        //declares integer k as the single digit one seconds code

k = blinkseconds();
digitalWrite(led5, HIGH);      //code for the tens digit of the seconds (10,20,30,40 seconds, etc.) of the binary clock
k = blinkseconds();
  digitalWrite(led5, LOW);
  digitalWrite(led6, HIGH);
k = blinkseconds(); 
  digitalWrite(led5, HIGH);
  digitalWrite(led6, HIGH);
k = blinkseconds();
  digitalWrite(led5, LOW);
  digitalWrite(led6, LOW);
  digitalWrite(led7, HIGH);
k = blinkseconds();
  digitalWrite(led5, HIGH);
k = blinkseconds();
  digitalWrite(led5, LOW);
  digitalWrite(led7,LOW);
};

int blinkminutes (){
   int m;                       //declares  integer m as the code for the seconds portion of the clock
   m = blinktens(); 
   digitalWrite(led8, HIGH);    // code for the single digit for minutes
   m = blinktens(); 
   digitalWrite(led8, LOW);   
   digitalWrite(led9, HIGH); 
   m = blinktens(); 
   digitalWrite(led8, HIGH);
   m = blinktens(); 
   digitalWrite(led8, LOW);
   digitalWrite(led9, LOW);
   digitalWrite(led10, HIGH); 
   m = blinktens(); 
   digitalWrite(led8, HIGH);
   m = blinktens(); 
   digitalWrite(led8, LOW);
   digitalWrite(led9, HIGH);
   m = blinktens();  
   digitalWrite(led8, HIGH);
   m = blinktens(); 
   digitalWrite(led10, LOW);
   digitalWrite(led8, LOW);
   digitalWrite(led9, LOW);
   digitalWrite(led11, HIGH); 
   m = blinktens(); 
   digitalWrite(led8, HIGH);
   m = blinktens(); 
   digitalWrite(led8, LOW); 
   digitalWrite(led11, LOW);
};

int blinktenmins () {
  int r;                         //declares r as the code for the single minutes (1 min, 3 min, 8 min, etc.)
r = blinkminutes(); 
  digitalWrite(led12, HIGH);     // code for the tens digit for minutes on the binary clock (10 minutes, 30 minutes, etc.)
r = blinkminutes(); 
  digitalWrite(led12, LOW);
  digitalWrite(led13, HIGH);
r = blinkminutes(); 
  digitalWrite(led12, HIGH);
r = blinkminutes(); 
  digitalWrite(led12, LOW);
  digitalWrite(led13, LOW);
  digitalWrite(led14, HIGH);
r = blinkminutes(); 
  digitalWrite(led12, HIGH);
r = blinkminutes(); 
  digitalWrite(led12, LOW);
  digitalWrite(led14, LOW);
}
void setup() {
  pinMode(led, OUTPUT);         // declares all the Led's as an output
  pinMode(led2, OUTPUT); 
  pinMode(led3, OUTPUT); 
  pinMode(led4, OUTPUT); 
  pinMode(led5, OUTPUT);
  pinMode(led6, OUTPUT); 
  pinMode(led7, OUTPUT); 
  pinMode(led8, OUTPUT);
  pinMode(led9, OUTPUT); 
  pinMode(led10, OUTPUT); 
  pinMode(led11, OUTPUT);  
  pinMode(led12, OUTPUT); 
  pinMode(led13, OUTPUT); 
  pinMode(led14, OUTPUT); 
}

void loop() {

int o;
o = blinktenmins(); //declares the code for the blink minutes tens digit as "o" and runs it repeatedly
}
